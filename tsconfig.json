{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2020",

    "outDir": "dist",
    "declaration": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["src/**/*.spec.ts"]
}
